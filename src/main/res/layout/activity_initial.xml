<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_initial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="nyc.c4q.InitialActivity"> <!-- tried to changed it to counterLayout but gave me an error-->

    <LinearLayout
        android:id="@+id/counterLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"> <!--if i change it to 0dp, it layout disappears-->


        <LinearLayout
            android:id="@+id/counterButtonsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="+" />

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="-"
                android:layout_gravity="center_vertical" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvCounter"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:text="0"
            android:layout_gravity="left"
            />
        </LinearLayout>


        <Button
        android:id="@+id/buttonTileActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="TileActivity"
         />

         <Button
              android:id="@+id/buttonEmpty"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:text="Empty"
        />

    </LinearLayout>

